<Window x:Class="DateiverwaltungApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dateiverwaltung" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top" Background="White" BorderBrush="LightGray" BorderThickness="0,0,0,1">
            <MenuItem Header="Datei" Foreground="Black">
                <MenuItem Header="Neue Datei" Click="MenuNeueDatai_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="📄" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Neuer Ordner" Click="MenuNeuerOrdner_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="📁" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="Öffnen" Click="MenuÖffnen_Click" InputGestureText="Enter">
                    <MenuItem.Icon>
                        <TextBlock Text="📂" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Zuletzt geöffnet">
                    <MenuItem.Icon>
                        <TextBlock Text="🕒" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="Beenden" Click="MenuBeenden_Click" InputGestureText="Alt+F4">
                    <MenuItem.Icon>
                        <TextBlock Text="🚪" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Bearbeiten" Foreground="Black">
                <MenuItem Header="Kopieren" Click="MenuKopieren_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="📋" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Einfügen" Click="MenuEinfügen_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="📌" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="Löschen" Click="MenuLöschen_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="🗑️" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Umbenennen" Click="MenuUmbenennen_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="✏️" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Ansicht" Foreground="Black">
                <MenuItem Header="Aktualisieren" Click="MenuAktualisieren_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="🔄" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Hilfe" Foreground="Black">
                <MenuItem Header="Über" Click="MenuÜber_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="ℹ️" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
        </Menu>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <!-- Linke Seite - Verzeichnisbaum -->
            <DockPanel Grid.Column="0" Margin="5">
                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBox x:Name="Suche" Width="180" Margin="0,0,5,0" BorderBrush="LightGray"/>
                    <Button Content="Suchen" Width="60" Click="Suchen_Click"
                            Background="White" BorderBrush="LightGray"/>
                </StackPanel>
                <TreeView x:Name="Verzeichnisse" Background="White" BorderBrush="LightGray">
                    <TreeViewItem Header="Zuletzt geöffnet" IsExpanded="True"/>
                    <TreeViewItem Header="Documents"/>
                    <TreeViewItem Header="Desktop"/>
                    <TreeViewItem Header="Downloads"/>
                </TreeView>
            </DockPanel>

            <!-- Mittlerer Bereich - Dateiliste -->
            <ListView x:Name="Dateien" Grid.Column="1" Margin="5" Background="White" BorderBrush="LightGray"
                      MouseDoubleClick="Dateien_MouseDoubleClick">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Name" Width="200">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Symbol}" Margin="0,0,5,0"/>
                                        <TextBlock Text="{Binding Name}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Größe" Width="100" DisplayMemberBinding="{Binding GrößeAnzeige}"/>
                        <GridViewColumn Header="Geändert" Width="150" DisplayMemberBinding="{Binding ÄnderungsdatumAnzeige}"/>
                    </GridView>
                </ListView.View>
            </ListView>

            <!-- Rechte Seite - Dateivorschau -->
            <DockPanel Grid.Column="2" Margin="5">
                <GroupBox Header="Dateivorschau" DockPanel.Dock="Top" BorderBrush="LightGray">
                    <StackPanel Margin="5">
                        <GroupBox Header="Informationen" BorderBrush="LightGray">
                            <Grid Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Name:" Grid.Row="0" Grid.Column="0" Margin="0,2"/>
                                <TextBlock Text="{Binding SelectedItem.Name, ElementName=Dateien}" 
                                         Grid.Row="0" Grid.Column="1" Margin="5,2"/>

                                <TextBlock Text="Größe:" Grid.Row="1" Grid.Column="0" Margin="0,2"/>
                                <TextBlock Text="{Binding SelectedItem.GrößeAnzeige, ElementName=Dateien}" 
                                         Grid.Row="1" Grid.Column="1" Margin="5,2"/>

                                <TextBlock Text="Geändert:" Grid.Row="2" Grid.Column="0" Margin="0,2"/>
                                <TextBlock Text="{Binding SelectedItem.ÄnderungsdatumAnzeige, ElementName=Dateien}" 
                                         Grid.Row="2" Grid.Column="1" Margin="5,2"/>

                                <TextBlock Text="Typ:" Grid.Row="3" Grid.Column="0" Margin="0,2"/>
                                <TextBlock Text="{Binding SelectedItem.Dateityp, ElementName=Dateien}" 
                                         Grid.Row="3" Grid.Column="1" Margin="5,2"/>
                            </Grid>
                        </GroupBox>
                    </StackPanel>
                </GroupBox>
            </DockPanel>
        </Grid>
    </DockPanel>
</Window>